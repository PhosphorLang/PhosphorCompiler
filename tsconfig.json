{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2021",
        "lib": [
            "ES2021"
        ],

        "outDir": "bin",

        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitOverride": true,

        "allowJs": false,
        "esModuleInterop": true,

        "sourceMap": true,
        "removeComments": true,

        "incremental": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
